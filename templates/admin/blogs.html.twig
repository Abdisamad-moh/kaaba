{% extends 'admin_base2.html.twig' %}

{% block title %}Blogs !
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-xl-12">
			<div class="">
				<div class="">
<div class="card bg-info-subtle shadow-none position-relative overflow-hidden mb-4">
			<div class="card-body px-4 py-3">
				<div class="row align-items-center">
					<div class="col-9">
						<h4 class="fw-semibold mb-8">
							<i class="ti ti-users fs-8 "></i>
							Blogs</h4>
						<nav aria-label="breadcrumb">
							<ol class="breadcrumb">
								<li class="breadcrumb-item">
									<a class="text-muted text-decoration-none" href="#">Blogs</a>
								</li>
								
							</ol>
						</nav>
					</div>
					<div class="col-3">
						<div class="text-center">
							<a href="{{ path("app_admin_add_blog") }}" class=" btn btn-danger waves-effect waves-light waves-effect mb-2" data-toggle="modal" data-target=".tender-example-modal-lg">Create a new blog</a>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="container">

			<div class="row">
				<div class="col-12"></div>
				<div class="col-md-6"></div>
				<div class="col-md-6">
					<div class="form-group"></div>
				</div>
			</div>


		</div>

					

					<div class="container">
						<div class="row ma_top-inner">
							<div class="table-responsive">
								<table id="file_export" class="table w-100 table-striped table-bordered display text-nowrap">
									<thead>
										<tr style="font-size: 15px;">
											<th>ID</th>
											<th>Title</th>
											<th>Subtitle</th>
											<th>Type</th>
											<th>Category</th>
											<th>Status</th>
											<th>Actions</th>
										</tr>
									</thead>
									<tbody>
										{% for item in blogs %}


											<tr>
												<th scope="row">{{item.id}}</th>
												<td>{{item.title}}</td>
												<td>{{item.subtitle}}</td>
												<td>{{item.blogtype}}</td>
												<td>{{item.category.name}}</td>
												<td>
													<span class="badge badge-pill badge-success">Active</span>
												</td>
												<td>

													<a class="text-gr " href="" data-toggle="modal" data-target=".tender-example-modal-lg">
														&nbsp;&nbsp;<i class="ion-compose"></i>
													</a>

													&nbsp;
													<a class="text-red " href="{{ path("app_admin_add_blog",{'blog': item.id}) }}">
														<i class="fa fa-edit alert alert-primary"></i>
													</a>
													&nbsp;
													<a class="text-red " href="{{ path("app_admin_delete_blog",{'blog': item.id}) }}">
														<i class="fa fa-trash alert alert-danger"></i>
													</a>
												</td>


											</tr>
										{% endfor %}


									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>{% endblock %}
