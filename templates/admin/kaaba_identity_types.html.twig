{% extends 'admin_base2.html.twig' %}

{% block title %}Kaaba Identity Types{% endblock %}

{% block body %}
    <!-- Page Header -->
    <div class="card bg-info-subtle shadow-none position-relative overflow-hidden mb-4">
        <div class="card-body px-4 py-3">
            <div class="row align-items-center">
                <div class="col-9">
                    <h4 class="fw-semibold mb-8">Kaaba Identity Types</h4>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a class="text-muted text-decoration-none" href="#">Admin</a>
                            </li>
                            <li class="breadcrumb-item" aria-current="page">Identity Types</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-3">
                    <a href="{{ path('app_admin_kaaba_identity_types', { create: 1 }) }}" class="btn btn-primary float-end">
                        Add New Identity Type
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Form for Creating/Editing -->
    {% if showForm %}
    <div class="card">
        <div class="card-header text-bg-primary">
            <h5 class="mb-0 text-white">{{ editId ? 'Edit Identity Type' : 'Add New Identity Type' }}</h5>
        </div>
        <div class="form-horizontal">
            <div class="form-body">
                <div class="card-body">
                    <h5 class="card-title mb-0">Identity Type Information</h5>
                </div>
                <hr class="m-0">
                <div class="card-body">
                    {{ form_start(form) }}
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="form-group row">
                                <label class="form-label text-end col-md-4">{{ form_label(form.name) }}</label>
                                <div class="col-md-8">
                                    {{ form_widget(form.name, { 'attr': { 'class': 'form-control' } }) }}
                                    {{ form_errors(form.name) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="m-0">
                    <div class="form-actions border-top">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <div class="col-md-offset-3 col-md-9">
                                            <button type="submit" class="btn btn-primary">
                                                <i class="ti ti-edit fs-5"></i>
                                                {{ editId ? 'Save Changes' : 'Create Identity Type' }}
                                            </button>
                                            <a href="{{ path('app_admin_kaaba_identity_types') }}" class="btn bg-danger-subtle text-danger ms-6">
                                                Cancel
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6"></div>
                            </div>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    <!-- Table of Existing Identity Types -->
    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title">Existing Kaaba Identity Types</h5>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for identityType in identityTypes %}
                        <tr>
                            <td>{{ identityType.id }}</td>
                            <td>{{ identityType.name }}</td>
                            <td>
                                <a href="{{ path('app_admin_kaaba_identity_types', { edit: identityType.id }) }}" class="btn btn-sm btn-warning">Edit</a>
                                <a href="{{ path('app_admin_kaaba_identity_types', { delete: identityType.id }) }}" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this identity type?')">Delete</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="text-center">No identity types found.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}