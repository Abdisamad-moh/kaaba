{% extends 'admin_base2.html.twig' %}

{% block title %}Kaaba Scholarships{% endblock %}

{% block body %}
    <!-- Page Header -->
    <div class="card bg-info-subtle shadow-none position-relative overflow-hidden mb-4">
        <div class="card-body px-4 py-3">
            <div class="row align-items-center">
                <div class="col-9">
                    <h4 class="fw-semibold mb-8">Kaaba Scholarships</h4>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a class="text-muted text-decoration-none" href="#">Admin</a>
                            </li>
                            <li class="breadcrumb-item" aria-current="page">Scholarships</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-3">
                    <a href="{{ path('app_admin_kaaba_scholarships', { create: 1 }) }}" class="btn btn-primary float-end">
                        <i class="ti ti-plus me-2"></i>
                        Add New Scholarship
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Form for Creating/Editing -->
    {% if showForm %}
    <div class="card">
        <div class="card-header text-bg-primary">
            <h5 class="mb-0 text-white">
                <i class="ti ti-{{ editUuid ? 'edit' : 'plus' }} me-2"></i>
                {{ editUuid ? 'Edit Scholarship' : 'Add New Scholarship' }}
            </h5>
        </div>
        <div class="form-horizontal">
            <div class="form-body">
                <div class="card-body">
                    <h5 class="card-title mb-0">Scholarship Information</h5>
                </div>
                <hr class="m-0">
                <div class="card-body">
                    {{ form_start(form) }}
                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <div class="form-group row">
                                <label class="form-label text-end col-md-3 col-form-label">
                                    {{ form_label(form.title) }}
                                    <span class="text-danger">*</span>
                                </label>
                                <div class="col-md-9">
                                    {{ form_widget(form.title, { 
                                        'attr': { 
                                            'class': 'form-control',
                                            'placeholder': 'e.g., Undergraduate Scholarship 2024, Master Program Funding, etc.'
                                        } 
                                    }) }}
                                    {{ form_errors(form.title) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <div class="form-group row">
                                <label class="form-label text-end col-md-3 col-form-label">
                                    {{ form_label(form.content) }}
                                    <span class="text-danger">*</span>
                                </label>
                                <div class="col-md-9">
                                    {{ form_widget(form.content, { 
                                        'attr': { 
                                            'class': 'form-control',
                                            'placeholder': 'Enter detailed description about the scholarship, requirements, benefits, etc.'
                                        } 
                                    }) }}
                                    {{ form_errors(form.content) }}
                                    <small class="form-text text-muted">
                                        Maximum 255 characters
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <div class="form-group row">
                                <label class="form-label text-end col-md-3 col-form-label">
                                    {{ form_label(form.status) }}
                                    <span class="text-danger">*</span>
                                </label>
                                <div class="col-md-9">
                                    {{ form_widget(form.status, { 
                                        'attr': { 
                                            'class': 'form-select'
                                        } 
                                    }) }}
                                    {{ form_errors(form.status) }}
                                    <small class="form-text text-muted">
                                        Active scholarships will be visible to applicants
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <div class="form-group row">
                                <label class="form-label text-end col-md-3 col-form-label">
                                    {{ form_label(form.closing_date) }}
                                    <span class="text-danger">*</span>
                                </label>
                                <div class="col-md-9">
                                    {{ form_widget(form.closing_date, { 
                                        'attr': { 
                                            'class': 'form-control'
                                        } 
                                    }) }}
                                    {{ form_errors(form.closing_date) }}
                                    <small class="form-text text-muted">
                                        Applications will be accepted until this date
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="m-0">
                    <div class="form-actions border-top">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <div class="col-md-offset-3 col-md-9">
                                            <button type="submit" class="btn btn-primary">
                                                <i class="ti ti-{{ editUuid ? 'check' : 'plus' }} fs-5 me-2"></i>
                                                {{ editUuid ? 'Update Scholarship' : 'Create Scholarship' }}
                                            </button>
                                            <a href="{{ path('app_admin_kaaba_scholarships') }}" class="btn bg-danger-subtle text-danger ms-6">
                                                <i class="ti ti-x me-2"></i>
                                                Cancel
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6"></div>
                            </div>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    <!-- Table of Existing Scholarships -->
    <div class="card mt-4">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="card-title mb-0">Existing Kaaba Scholarships</h5>
                <div>
                    <span class="badge bg-success me-2">Active: {{ scholarships|filter(s => s.status)|length }}</span>
                    <span class="badge bg-secondary">Inactive: {{ scholarships|filter(s => not s.status)|length }}</span>
                </div>
            </div>
            
            {% if scholarships|length > 0 %}
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th width="50">#</th>
                            <th width="120">UUID</th>
                            <th>Title</th>
                            <th>Content</th>
                            <th width="100">Status</th>
                            <th width="120">Closing Date</th>
                            <th width="250" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for scholarship in scholarships %}
                            <tr>
                                <td class="text-muted">{{ loop.index }}</td>
                                <td>
                                    <small class="text-muted font-monospace" title="{{ scholarship.uuid }}">
                                        {{ scholarship.uuid|slice(0, 8) }}...
                                    </small>
                                </td>
                                <td>
                                    <strong>{{ scholarship.title }}</strong>
                                </td>
                                <td>
                                    <small class="text-muted">
                                        {{ scholarship.content|length > 50 ? scholarship.content|slice(0, 50) ~ '...' : scholarship.content }}
                                    </small>
                                </td>
                                <td>
                                    <span class="badge {% if scholarship.status %}bg-success{% else %}bg-secondary{% endif %}">
                                        <i class="ti ti-{{ scholarship.status ? 'check' : 'x' }} me-1"></i>
                                        {{ scholarship.status ? 'Active' : 'Inactive' }}
                                    </span>
                                </td>
                                <td>
                                    <span class="{% if scholarship.closingDate < date() %}text-danger{% endif %}">
                                        {{ scholarship.closingDate|date('Y-m-d') }}
                                    </span>
                                    {% if scholarship.closingDate < date() %}
                                        <br><small class="text-danger">Expired</small>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="{{ path('app_admin_kaaba_scholarships', { edit: scholarship.uuid }) }}" 
                                           class="btn btn-warning" 
                                           title="Edit scholarship">
                                            <i class="ti ti-edit me-1"></i> Edit
                                        </a>
                                        <a href="{{ path('app_admin_kaaba_scholarships', { toggle: scholarship.uuid }) }}" 
                                           class="btn {% if scholarship.status %}btn-secondary{% else %}btn-success{% endif %}" 
                                           onclick="return confirm('Are you sure you want to {{ scholarship.status ? 'deactivate' : 'activate' }} \"{{ scholarship.title }}\"?')"
                                           title="{{ scholarship.status ? 'Deactivate' : 'Activate' }} scholarship">
                                            <i class="ti ti-{{ scholarship.status ? 'power' : 'check' }} me-1"></i> 
                                            {{ scholarship.status ? 'Deactivate' : 'Activate' }}
                                        </a>
                                        <a href="{{ path('app_admin_kaaba_scholarships', { delete: scholarship.uuid }) }}" 
                                           class="btn btn-danger" 
                                           onclick="return confirm('Are you sure you want to delete \"{{ scholarship.title }}\"? This action cannot be undone.')"
                                           title="Delete scholarship">
                                            <i class="ti ti-trash me-1"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
            <div class="alert alert-info text-center py-4">
                <div class="mb-3">
                    <i class="ti ti-school text-primary" style="font-size: 3rem;"></i>
                </div>
                <h5 class="alert-heading">No Scholarships Found</h5>
                <p class="mb-3">Get started by creating your first scholarship program.</p>
                <a href="{{ path('app_admin_kaaba_scholarships', { create: 1 }) }}" class="btn btn-primary">
                    <i class="ti ti-plus me-2"></i>Create First Scholarship
                </a>
            </div>
            {% endif %}
        </div>
    </div>
{% endblock %}