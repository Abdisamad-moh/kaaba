{% extends 'admin_base2.html.twig' %}

{% block title %}
    Email Templates
{% endblock %}

{% block body %}
</div>
    <div class="container-fluid">
        <!-- Modern Header with Button -->
        <div class="card custom-header bg-gradient-primary text-white shadow-sm mb-4">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="fw-semibold mb-0">
                            <i class="ti ti-mail fs-4 me-2"></i>
                            Email Templates
                        </h4>
                        <p class="mb-0 text-white-50">Manage your email templates efficiently.</p>
                    </div>
                    <div>
                        <a href="{{ path('app_admin_email_temp') }}" class="btn btn-light btn-lg text-primary fw-semibold">
                            <i class="ti ti-plus me-2"></i>
                            Add Template
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Data Table Section -->
        <div class="card custom-card shadow-sm">
            <div class="card-body p-4">
                <div class="table-responsive">
                    <table id="file_export" class="table table-striped table-hover w-100">
                        <thead class="custom-table-header">
                            <tr>
                                <th>Type</th>
                                <th>Action</th>
                                <th>Subject</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for item in applications %}
                                <tr>
                                    <td>{{ item.type }}</td>
                                    <td>{{ item.action }}</td>
                                    <td>{{ item.subject }}</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('app_admin_email_temp', {'temp': item.id}) }}" class="btn btn-outline-primary btn-sm">
                                                <i class="ti ti-eye me-1"></i>
                                                View
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}