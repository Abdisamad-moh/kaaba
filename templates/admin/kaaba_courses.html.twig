{% extends 'admin_base2.html.twig' %}

{% block title %}Kaaba Courses{% endblock %}

{% block body %}
    <!-- Page Header -->
    <div class="card bg-info-subtle shadow-none position-relative overflow-hidden mb-4">
        <div class="card-body px-4 py-3">
            <div class="row align-items-center">
                <div class="col-9">
                    <h4 class="fw-semibold mb-8">Kaaba Courses</h4>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a class="text-muted text-decoration-none" href="#">Admin</a>
                            </li>
                            <li class="breadcrumb-item" aria-current="page">Courses</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-3">
                    {% if not app.user.status %}
                        <button class="btn btn-danger text-white float-end" title="User Disabled - Cannot Add Courses" disabled>
                            <i class="ti ti-plus me-2"></i>
                            User Disabled - Cannot Add Courses
                        </button>
                    {% else %}
                        <a href="{{ path('app_admin_kaaba_courses', { create: 1 }) }}" class="btn btn-primary float-end">
                            <i class="ti ti-plus me-2"></i>
                            Add New Course
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Form for Creating/Editing -->
    {% if showForm %}
    <div class="card">
        <div class="card-header text-bg-primary">
            <h5 class="mb-0 text-white">
                <i class="ti ti-{{ editUuid ? 'edit' : 'plus' }} me-2"></i>
                {{ editUuid ? 'Edit Course' : 'Add New Course' }}
            </h5>
        </div>
        <div class="form-horizontal">
            <div class="form-body">
                <div class="card-body">
                    <h5 class="card-title mb-0">Course Information</h5>
                </div>
                <hr class="m-0">
                <div class="card-body">
                    {{ form_start(form) }}
                    <div class="row">
                        <!-- Institute Selection -->
                        <div class="col-md-8 mb-3">
                            <div class="form-group row">
                                <label class="form-label text-end col-md-3 col-form-label">
                                    {{ form_label(form.institute) }}
                                    <span class="text-danger">*</span>
                                </label>
                                <div class="col-md-9">
                                    {{ form_widget(form.institute, { 
                                        'attr': { 
                                            'class': 'form-select',
                                        } 
                                    }) }}
                                    {{ form_errors(form.institute) }}
                                    <small class="form-text text-muted">
                                        Select the institute that offers this course
                                    </small>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Course Name -->
                        <div class="col-md-8 mb-3">
                            <div class="form-group row">
                                <label class="form-label text-end col-md-3 col-form-label">
                                    {{ form_label(form.name) }}
                                    <span class="text-danger">*</span>
                                </label>
                                <div class="col-md-9">
                                    {{ form_widget(form.name, { 
                                        'attr': { 
                                            'class': 'form-control',
                                            'placeholder': 'e.g., Computer Science, Business Administration, Medicine, etc.'
                                        } 
                                    }) }}
                                    {{ form_errors(form.name) }}
                                    <small class="form-text text-muted">
                                        Enter the name of the academic course or program
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="m-0">
                    <div class="form-actions border-top">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <div class="col-md-offset-3 col-md-9">
                                            <button type="submit" class="btn btn-primary">
                                                <i class="ti ti-{{ editUuid ? 'check' : 'plus' }} fs-5 me-2"></i>
                                                {{ editUuid ? 'Update Course' : 'Create Course' }}
                                            </button>
                                            <a href="{{ path('app_admin_kaaba_courses') }}" class="btn bg-danger-subtle text-danger ms-6">
                                                <i class="ti ti-x me-2"></i>
                                                Cancel
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6"></div>
                            </div>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    <!-- Table of Existing Courses -->
    <div class="card mt-4">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="card-title mb-0">Existing Kaaba Courses</h5>
                <span class="badge bg-primary">Total: {{ courses|length }}</span>
            </div>
            
            {% if courses|length > 0 %}
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th width="50">#</th>
                            <th width="120">UUID</th>
                            <th>Institute</th>
                            <th>Course Name</th>
                            <th width="150">Used By Applications</th>
                            <th width="200" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for course in courses %}
                            <tr>
                                <td class="text-muted">{{ loop.index }}</td>
                                <td>
                                    <small class="text-muted font-monospace" title="{{ course.uuid }}">
                                        {{ course.uuid|slice(0, 8) }}...
                                    </small>
                                </td>
                                <td>
                                    {% if course.institute %}
                                        <span class="badge bg-info" title="{{ course.institute.name }}">
                                            <i class="ti ti-school me-1"></i>
                                            {{ course.institute.name|length > 30 ? course.institute.name|slice(0, 30) ~ '...' : course.institute.name }}
                                        </span>
                                        {% if course.institute.scholarship %}
                                            <br>
                                            <small class="text-muted" title="{{ course.institute.scholarship.title }}">
                                                <i class="ti ti-award me-1"></i>
                                                {{ course.institute.scholarship.title|length > 25 ? course.institute.scholarship.title|slice(0, 25) ~ '...' : course.institute.scholarship.title }}
                                            </small>
                                        {% endif %}
                                    {% else %}
                                        <span class="badge bg-secondary">
                                            <i class="ti ti-school-off me-1"></i>
                                            No Institute
                                        </span>
                                    {% endif %}
                                </td>
                                <td>
                                    <strong>{{ course.name }}</strong>
                                </td>
                               <td>
    {% set applicationsCount = course.kaabaApplications|length %}
    <span class="badge {% if applicationsCount > 0 %}bg-warning{% else %}bg-success{% endif %}">
        <i class="ti ti-{{ applicationsCount > 0 ? 'users' : 'user-off' }} me-1"></i>
        {{ applicationsCount }} application(s)
    </span>
</td>
                                <td class="text-center">
                                    {% if not app.user.status %}
                                        <span class="text-muted small">User Disabled</span>
                                    {% else %}
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="{{ path('app_admin_kaaba_courses', { edit: course.uuid }) }}" 
                                               class="btn btn-warning" 
                                               title="Edit course">
                                                <i class="ti ti-edit me-1"></i> Edit
                                            </a>
                                            {% if course.kaabaApplications|length == 0 %}
                                                <a href="{{ path('app_admin_kaaba_courses', { delete: course.uuid }) }}" 
                                                   class="btn btn-danger" 
                                                   onclick="return confirm('Are you sure you want to delete \"{{ course.name }}\"? This action cannot be undone.')"
                                                   title="Delete course">
                                                    <i class="ti ti-trash me-1"></i> Delete
                                                </a>
                                            {% else %}
                                                <button class="btn btn-secondary" 
                                                        title="Cannot delete - this course has {{ course.kaabaApplications|length }} application(s). Reassign or delete those applications first."
                                                        data-bs-toggle="tooltip"
                                                        disabled>
                                                    <i class="ti ti-trash-off me-1"></i> Delete
                                                </button>
                                            {% endif %}
                                        </div>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
            <div class="alert alert-info text-center py-4">
                <div class="mb-3">
                    <i class="ti ti-book text-primary" style="font-size: 3rem;"></i>
                </div>
                <h5 class="alert-heading">No Courses Found</h5>
                <p class="mb-3">Get started by creating your first academic course.</p>
                {% if app.user.status %}
                    <a href="{{ path('app_admin_kaaba_courses', { create: 1 }) }}" class="btn btn-primary">
                        <i class="ti ti-plus me-2"></i>Create First Course
                    </a>
                {% else %}
                    <button class="btn btn-secondary" disabled>User Disabled - Cannot Add Courses</button>
                {% endif %}
            </div>
            {% endif %}
        </div>
    </div>
{% endblock %}