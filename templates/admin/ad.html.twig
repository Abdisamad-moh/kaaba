{% extends 'admin_base2.html.twig' %}

{% block title %}Ad
{% endblock %}

{% block body %}
<div class="container-fluid">


	<div class="card bg-info-subtle shadow-none position-relative overflow-hidden mb-4">
		<div class="card-body px-4 py-3">
			<div class="row align-items-center">
				<div class="col-9">
					<h4 class="fw-semibold mb-8">Ads</h4>
					<nav aria-label="breadcrumb">
						<ol class="breadcrumb">
							<li class="breadcrumb-item active" aria-current="page">
								Ads
							</li>
<li class="breadcrumb-item active" aria-current="page">
	{% if ad.id %}Edit Ad{% else %}Create Ad{% endif %}
</li>
						</ol>
					</nav>
				</div>

			</div>
		</div>
	</div>
	<div class="containerss">

		<div class="row">
			<div class="col-12"></div>
			<div class="col-md-6"></div>
			<div class="col-md-6">
				<div class="form-group"></div>
			</div>
		</div>


	</div>
	<div class="card">
		<div class="card-body">
			{{ form_start(form) }}
			<div class="row">
				<div class="col-6">
					<div class="mb-4">
						<label class="form-label">Client</label>
						<span class="text-danger">*</span>
						<div class="input-group">
							{{ form_widget(form.client) }}
						</div>
					</div>
				</div>
				<div class="col-6">
					<div class="mb-4">
						<label class="form-label">Contact Email</label>
						<span class="text-danger">*</span>
						<div class="input-group">
							{{ form_widget(form.contact_email) }}
						</div>
					</div>
				</div>
				<div class="col-6">
					<div class="mb-4">
						<label class="form-label">Status</label>
						<span class="text-danger">*</span>
						<div class="input-group">
							{{ form_widget(form.status) }}
						</div>
					</div>
				</div>
				<div class="col-6">
					<div class="mb-4">
						<label class="form-label">Link</label>
						<span class="text-danger">*</span>
						<div class="input-group">
							{{ form_widget(form.link) }}
						</div>
					</div>
				</div>

				<div class="col-6">
					<div class="mb-4">
						<label class="form-label">Deadline</label>
						<span class="text-danger">*</span>
						<div class="input-group">
							{{ form_widget(form.deadline, { 'attr': {'placeholder': 'Enter the image file' } }) }}

						</div>
					</div>
				</div>
				<div class="col-12">
					<div class="card">
						<div class="position-relative">
							{% set checkImage = false %}
							{# <img src="../assets/images/profile/user-1.jpg" alt="modernize-img"
								class="img-fluid rounded-circle" width="120" height="120"> #}
							{% if ad.image %}
							{% set checkImage = true %}
							<img class="card-img-top w-50" src="{{ path('profile_image', {'filename': ad.image }) }}"
								alt="Card image cap" >
							{% endif %}
							
						</div>
					</div>
					<div class="mb-4">
						<label class="form-label">Image Preview</label>
						<span class="text-danger">*</span>
						<div class="input-group">
							<div class="row justify-content-between align-items-center">

								<div class="col-sm-12">
									<div class="position-relative mb-n5">

									</div>
								</div>
							</div>


						</div>
					</div>
				</div>
				<div class="col-6">
					<div class="mb-4">
						<label class="form-label">Image</label>
						<span class="text-danger">*</span>
						<div class="input-group">
							{{ form_widget(form.image, { 'attr': {'placeholder': 'Enter the image file' } }) }}

						</div>
					</div>
				</div>
				<div class="col-6">
					<div class="mb-4">
						<label class="form-label">Pages</label>
						<span class="text-danger">*</span>
						<div class="input-group">
							{{ form_widget(form.pages, { 'attr': {'placeholder': 'Select the pages' } }) }}

						</div>
					</div>
				</div>
				<div class="col-12">
					<div class="ssmb-3 mt-3">
						<button type="submit" class="btn btn-primary"> {% if ad.id %}Update{% else %}Create{% endif %}
						</button>


					</div>
				</div>
			</div>

			{{ form_end(form) }}
		</div>
	</div>

</div>
{% endblock %}