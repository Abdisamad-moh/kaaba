{% extends 'admin_base2.html.twig' %}

{% block title %}
	Contacts List
{% endblock %}

{% block body %}

	<div class="container-fluid" data-controller="employer">
		<div class="container">

			<div class="row">
				<div class="col-12"></div>
				<div class="col-md-6"></div>
				<div class="col-md-6">
					<div class="form-group"></div>
				</div>
			</div>


		</div>
		
		<div

			class="datatables">
			<!-- start File export -->
			<div class="card">
				<div
					class="card-body">
					<div class="table-responsive">
						<table id="accounts" class="table w-100 table-striped table-bordered display text-nowrap" width="100%">
							<thead>
								<!-- start row -->
								<tr>
									<th>From</th>
									<th>Email</th>
									<th>Date</th>
									<th>Subject</th>
									<th>Message</th>
									<th>Actions</th>
								</tr>
								<!-- end row -->
							</thead>
							<tbody>
								<!-- start row -->
								{% for item in contacts %}

									<tr>
										<td>{{item.user.name ?? 'Visitor' }}</td>
										<td>
											{% if item.user %}
											{{ item.user.email }}
											{% else %}
											{{ item.email ?? 'N/A' }}
											{% endif %}
										</td>
										<td>{{ item.createdAt|date('d-m-Y') }}</td>
										<td>{{ item.subject ?? 'N/A' }}</td>
										<td>
											{{ item.message ?? 'N/A' }}
										</td>
										<td>
											<div class="button-group"></div>
										</td>
									</tr>
								{% endfor %}

								<!-- end row -->
							<!-- start row -->
								<!-- end row -->
							</tbody>
						</tfoot>
					</table>
				</div>
			</div>
		</div>
		<!-- end File export -->
	</div>
</div>{% endblock %}
