<div {{ attributes }}>
    {{ form_start(form, {attr: {
        'data-action': 'live#action:prevent',
        'data-live-action-param': 'save'
    }}) }}
        <div class="modal-body"> 
        {% for work in form.jobSeekerWorks %}
                <div class="row py-1 pb-3">
                    <div class="col-lg-12">
                        <label class="form-label">Profession </label>
                        {{ form_widget(work.profession) }}
                        {{ form_errors(work.profession) }}
                    </div>
                </div>
                <div class="row py-1">
                    <div class="col-lg-6">
                        <label class="form-label">Experience</label>
                        {{ form_widget(work.experience, {attr: {'class': 'form-control'}}) }}
                    </div>
                    <div class="col-sm-12 col-lg-6 d-flex align-items-center">
                        <div class="flex-fill">
                            <label class="form-label">Salary</label>
                            {{ form_widget(work.salary, {attr: {'class': 'form-control'}}) }}
                            {{ form_errors(work.salary, {attr: {'class': 'text-danger'}}) }}
                        </div>
                        <div class="ps-2 pb-1 mt-3">
                            {{ form_row(work.vars.button_delete, {label: 'X', attr: {class: 'btn btn-outline-danger'}}) }}
                        </div>
                    </div>
                </div>
                <hr>
        {% endfor %}
        {# {{ dump(_errors ?? '') }} #}
        </div>
        <div class="d-flex justify-content-end gap-2">
            {{ form_widget(form.jobSeekerWorks.vars.button_add, {label: '+ Add New', attr: {class: 'btn btn-outline-primary'}}) }}
            <button  class="btn btn-primary {{ this.hasValidationErrors ? 'disabled' : '' }}">Save</button>
        </div>
    {{ form_end(form) }}
</div>