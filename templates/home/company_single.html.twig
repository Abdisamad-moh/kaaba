																<div class="col-lg-4">
																	<h6 class="fs-15 mt-0 sufont">Founded</h6>
																	<p class=" fs-13">{{ detail.companystablishmentdate|date('Y') }}</p>
																</div>
																<div class="col-lg-4">
																	<h6 class="fs-15 mt-0 sufont">Headquarters</h6>
																	<p class=" fs-13">
																		{% if detail.country %}
																			{{detail.country.name}}
																		{% endif %}
																		{% if detail.city %}
																			,{{detail.city.name}}
																		{% endif %}
																	</p>
																</div>
																<div class="col-lg-4">
																	<h6 class="fs-15 mt-0 sufont">Company Size</h6>
																	<p class=" fs-13">{{ detail.numberofemployees}}
																		people</p>
																</div>
															</div>
															<div class="row mt-2">
																<div class="col-lg-4">
																	<h6 class="fs-15 mt-0 sufont">Website</h6>
																	<p class=" fs-13">{{ detail.website }}</p>
																</div>
																<div class="col-lg-4">
																	<h6 class="fs-15 mt-0 sufont">Industry</h6>
																	<p class=" fs-13">{{ detail.industry.name ?? ''}}</p>
																</div>
																{# <div class="col-lg-4">
																																	<h6 class="fs-15 mt-0 sufont">Type</h6>
																																	<p class=" fs-13">Private</p>
																																</div> #}
															</div>
														</div>
