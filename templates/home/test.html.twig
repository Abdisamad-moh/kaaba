<!-- start section -->
<section class="position-relative">
  <div class="container">
    <!-- Header row -->
    <div class="row">
      <div class="col-12">
        <h3 class="fw-700 text-white text-uppercase mb-0 py-3 px-4" style="background-color:#1b5e20;">
          Personal Information
        </h3>
      </div>
    </div>

    <!-- Form row -->
    <div class="row justify-content-center mt-4">
      <div class="col-lg-10">
        <form action="#" method="post" class="contact-form-style-03">
          <div class="row g-4">
            <!-- Full Name -->
            <div class="col-md-6">
              <label class="form-label fw-600 text-dark-gray">Full Name</label>
              <input type="text" class="form-control border border-dark rounded-0" placeholder="Enter your full name" />
            </div>

            <!-- Gender -->
            <div class="col-md-6">
              <label class="form-label fw-600 text-dark-gray">Gender</label>
              <select class="form-select border border-dark rounded-0">
                <option value="">Please select</option>
                <option>Male</option>
                <option>Female</option>
              </select>
            </div>

            <!-- Phone -->
            <div class="col-md-6">
              <label class="form-label fw-600 text-dark-gray">Phone</label>
              <input type="tel" class="form-control border border-dark rounded-0" placeholder="Enter your phone number" />
            </div>

            <!-- Email -->
            <div class="col-md-6">
              <label class="form-label fw-600 text-dark-gray">Email</label>
              <input type="email" class="form-control border border-dark rounded-0" placeholder="Enter your email address" />
            </div>

            <!-- Nationality -->
            <div class="col-md-6">
              <label class="form-label fw-600 text-dark-gray">Nationality</label>
              <select class="form-select border border-dark rounded-0">
                <option>Somaliland</option>
                <option>Somalia</option>
                <option>Other</option>
              </select>
            </div>

            <!-- Date of Birth -->
            <div class="col-md-6">
              <label class="form-label fw-600 text-dark-gray">Date of Birth</label>
              <input type="date" class="form-control border border-dark rounded-0" />
            </div>

            <!-- Region -->
            <div class="col-md-6">
              <label class="form-label fw-600 text-dark-gray">Region</label>
              <select class="form-select border border-dark rounded-0">
                <option value="">Please select</option>
                <option>Maroodi Jeex</option>
                <option>Awdal</option>
                <option>Togdheer</option>
              </select>
            </div>

            <!-- District -->
            <div class="col-md-6">
              <label class="form-label fw-600 text-dark-gray">District</label>
              <input type="text" class="form-control border border-dark rounded-0" placeholder="Enter your district" />
            </div>

            <!-- Town -->
            <div class="col-md-6">
              <label class="form-label fw-600 text-dark-gray">Town</label>
              <input type="text" class="form-control border border-dark rounded-0" placeholder="Enter your town" />
            </div>

            <!-- Village -->
            <div class="col-md-6">
              <label class="form-label fw-600 text-dark-gray">Village</label>
              <input type="text" class="form-control border border-dark rounded-0" placeholder="Enter your village" />
            </div>

            <!-- Submit Button -->
            <div class="col-12 text-end mt-3">
              <button type="submit" class="btn btn-dark-gray btn-round-edge px-5">Next Step</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
<!-- end section -->
