<style>
/* ---- CARD CONTAINER ---- */
.scholarship-card {
  background: #fff;
  border-radius: 12px;
  transition: all 0.3s ease;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  height: 100%;
}

.scholarship-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
}

/* ---- CARD BODY ---- */
.scholarship-card .card-body {
  /* background: linear-gradient(180deg, #ffffff 0%, #f8faf7 100%); */
  border-radius: 12px;
  display: flex;
  flex-direction: column;
  height: 100%;
}

/* ---- HEADING ---- */
.scholarship-card .card-title {
  background-color: #6B9B41;
  color: #fff;
  padding: 12px 15px;
  border-radius: 8px;
  font-weight: 600;
  font-size: 18px;
}

/* ---- TABLE STYLING ---- */
.scholarship-details table {
  width: 100%;
  border-collapse: collapse;
  background-color: #fff;
  border-radius: 8px;
  overflow: hidden;
}

.scholarship-details table th,
.scholarship-details table td {
  padding: 10px 12px;
  vertical-align: top;
}

.scholarship-details table th {
  color: #1a1a1a;
  font-weight: 600;
  width: 37%;
}

.scholarship-details table td {
  color: #444;
  font-weight: 500;
}

/* Alternating row colors with theme palette */
.scholarship-details table tr:nth-child(odd) {
  background-color: #f3f9ef; /* soft tint of #6B9B41 */
}
.scholarship-details table tr:nth-child(even) {
  background-color: #fafafa;
}
.scholarship-details table tr:hover {
  background-color: #e6f2db;
  transition: background 0.3s ease;
}

/* ---- BUTTON ---- */
.scholarship-card .btn-primary {
  background-color: #6B9B41;
  border: none;
}
.scholarship-card .btn-primary:hover {
  background-color: #5a8536;
}

.scholarship-card .btn-secondary {
  background-color: #561212;
  border: none;
}

/* ---- RESPONSIVE FIX ---- */
@media (max-width: 767px) {
  .scholarship-card .card-title {
    font-size: 16px;
  }
}
</style>


{% if lang == 'so' %}
  <section class="bg-solitude-blue py-5 scholarships-section" id="scholarships">
  <div class="container">
    <div class="row justify-content-center mb-3">
      <div class="col-xxl-6 col-xl-7 col-lg-8 col-md-9 col-sm-10 text-center last-paragraph-no-margin">
        <h3 class="text-white fw-700 ls-minus-1px py-3 px-4 d-inline-block rounded-3" style="background-color:#6B9B41;">
          Deeqaha Waxbarasho ee La Heli Karo
        </h3>
      </div>
    </div> 

    <div class="row g-4 justify-content-center align-items-stretch">
      {% for scholarship in scholarships %}
        <div class="col-lg-4 col-md-6 d-flex">
          <div class="scholarship-card flex-fill p-0 border-0 shadow-sm">
            <div class="card-body d-flex flex-column p-4">
              
              <h4 class="card-title mb-4">{{ scholarship.sotitle }}</h4>

              <div class="scholarship-details mb-4 flex-grow-1">
                <table class="table table-borderless mb-0">
                  {% set lines = scholarship.socontent|split('\n') %}
                  {% for line in lines %}
                    {% set parts = line|split(':') %}
                    {% if parts|length > 1 %}
                      <tr>
                        <th>{{ parts[0]|trim }}:</th>
                        <td>{{ parts[1]|trim }}</td>
                      </tr>
                    {% endif %}
                  {% endfor %}
                </table>
              </div>

              <div class="mt-auto">
                {% if scholarship.status %}
                  <a href="{{ path('app_scholarship_application', { uuid: scholarship.uuid }) }}" class="btn btn-primary w-100 mb-2">Hadda Codso</a>
                {% else %}
                  <button class="btn btn-secondary w-100 mb-2" disabled>Hada Diyaar Maaha</button>
                {% endif %}

                <small class="text-muted d-block mt-1">
                  Closing Date: <strong>{{ scholarship.closingDate|date('d M Y') }}</strong>
                  {% if scholarship.closingDate < date() %}
                    <span class="badge bg-danger ms-2">Wakhtigiisa ayaa dhamaada</span>
                  {% endif %}
                </small>
              </div>

            </div>
          </div>
        </div>
      {% else %}
        <div class="col-12 text-center">
          <p class="text-muted">Waan ka xunahay hada majiraan deeqo waxbarasho</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
{% else %}
<section class="bg-solitude-blue py-5 scholarships-section" id="scholarships">
  <div class="container">
    <div class="row justify-content-center mb-3">
      <div class="col-xxl-6 col-xl-7 col-lg-8 col-md-9 col-sm-10 text-center last-paragraph-no-margin">
        <h3 class="text-white fw-700 ls-minus-1px py-3 px-4 d-inline-block rounded-3" style="background-color:#6B9B41;">
          Available Scholarships
        </h3>
      </div>
    </div> 

    <div class="row g-4 justify-content-center align-items-stretch">
      {% for scholarship in scholarships %}
        <div class="col-lg-4 col-md-6 d-flex">
          <div class="scholarship-card flex-fill p-0 border-0 shadow-sm">
            <div class="card-body d-flex flex-column p-4">
              
              <h4 class="card-title mb-4">{{ scholarship.title }}</h4>

              <div class="scholarship-details mb-4 flex-grow-1">
                <table class="table table-borderless mb-0">
                  {% set lines = scholarship.content|split('\n') %}
                  {% for line in lines %}
                    {% set parts = line|split(':') %}
                    {% if parts|length > 1 %}
                      <tr>
                        <th>{{ parts[0]|trim }}:</th>
                        <td>{{ parts[1]|trim }}</td>
                      </tr>
                    {% endif %}
                  {% endfor %}
                </table>
              </div>

              <div class="mt-auto">
                {% if scholarship.status %}
                  <a href="{{ path('app_scholarship_application', { uuid: scholarship.uuid }) }}" class="btn btn-primary w-100 mb-2">Apply Now</a>
                {% else %}
                  <button class="btn btn-secondary w-100 mb-2" disabled>Not Available</button>
                {% endif %}

                <small class="text-muted d-block mt-1">
                  Closing Date: <strong>{{ scholarship.closingDate|date('d M Y') }}</strong>
                  {% if scholarship.closingDate < date() %}
                    <span class="badge bg-danger ms-2">Expired</span>
                  {% endif %}
                </small>
              </div>

            </div>
          </div>
        </div>
      {% else %}
        <div class="col-12 text-center">
          <p class="text-muted">No scholarships available at the moment.</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}

