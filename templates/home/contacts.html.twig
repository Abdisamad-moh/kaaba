{% extends 'base.html.twig' %}

{% block title %}Contact us - Metier Quest
{% endblock %}

{% block body %}
	<section class="bg-home4" id="home">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-lg-12">
					<div class="mb-2 pb-3 me-lg-6 text-center">
						<h1 class="display-5 fw-semibold mb-3 mt-3 fs-22">Contact
							<span class="text-primary fw-bold">Us
							</span>
						</h1>
						<p class="lead text-muted mb-0 pc-da">If you have questions about our company or services, please use the appropriate contact information.</p>
					</div>
				</div>
			</div>
		</div>
	</section>
	<section class="section">
		<div class="container">
			<div class="row justify-content-center">
				<div
					class="text-lg-start">
					<!-- ---------------------------- -->
					<div class="alert  bg-primary-cont" role="alert">
						<div class="row p-3">
							<div class="col-lg-6">
								<img class="img-fluid teimg cont_icon" src="assets/images/ash.png" alt="">
								<h5 class="fs-18 mb-1 mt-4 ptla">Get in touch</h5>
								<p class="lead text-muted  pc-da">We would love to hear from you. Our friendly team is always here to help</p>
								<div class="row">
									<div class="col-lg-1 p-30">
										<i class="fa fa-envelope-o" aria-hidden="true"></i>
									</div>
									<div class="col-lg-11">
										<h5 class="fs-15 mb-3 mt-2 co-pa">Email us at</h5>
										{# <p class="text-muted co-pa fs-13  co-bo">Our friendly team is here to help</p> #}
										<a class="text-blue" href="#">
											support@metier-quest.com</a>
										<ul class="social-menu list-inline mb-4 mt-4">
											<li class="list-inline-item">
												<a target="__blank" href="https://www.facebook.com/profile.php?id=61563278125974">
													<i class="fa fa-facebook" aria-hidden="true"></i>
												</a>
											</li>
											<li class="list-inline-item">
												<a target="__blank" href="https://twitter.com/Metierquest">
													<i class="fa fa-twitter" aria-hidden="true"></i>
												</a>
											</li>
											<li class="list-inline-item">
												<a target="__blank" href="https://www.instagram.com/metier.quest">
													<i class="fa fa-instagram" aria-hidden="true"></i>
												</a>
											</li>
											<li class="list-inline-item">
												<a target="__blank" href="https://www.linkedin.com/company/metier-quest/">
													<i class="fa fa-linkedin" aria-hidden="true"></i>
												</a>
											</li>
										</ul>
									</div>
								</div>
							</div>
							<div class="col-lg-6 text-md-end">
								<img class="img-fluid " src="assets/images/cont.png" alt="">
							</div>
						</div>
					</div>

					<div class="row">
						<div class="col-12  text-center">
							<h5>Contact Form</h5>
							{% if form_message == 'success' %}
							<div class="alert alert-success" role="alert">Thank you for connecting with us</div>
							{% elseif form_message == null %}

							{% else %}
							<div class="alert alert-danger" role="alert"> {{ form_message == 'error' ? 'Sorry, Something went wrong. Please try again' : form_message }}</div>
							{% endif %}
						</div>
						<div class="col-12">
							{% include 'home/contact_form.html.twig' with { form: form, site_key: site_key } %}
							{# <div data-controller="contact-form" data-contact-form-url-value="{{ path('app_contact_form') }}" data-contact-form-key-value="{{ site_key }}">
								<div class="alert_message"></div>
								<div class="form_container"></div>
							</div> #}
						</div>
					</div>

					<!-- ---------------------------- -->

				</div>
			</div>
		</div>
	</section>
	 

	{% include 'home/_footer.html.twig' %}
{% endblock %}
