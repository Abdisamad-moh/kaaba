{% block body %}
	<style>
		.min-height-200 {
			min-height: 200px;
		}
		.form-control {
			border: 1px solid black !important;
		}
	</style>
	<div class="page-content">
		<section class="bg-homelogin" id="home">
			<div class="container">
				<div class="row align-items-center">
					<div class="col-lg-12">
						<div class="mb-2 pb-1 me-lg-6 text-center">
							<h1 class="display-5 fw-semibold mb-3 mt-3 fs-22">Get Job Alert</h1>
