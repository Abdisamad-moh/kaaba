						</div>
						<div class="col-12 text-center">
							<img style="width: 300px;" class="img-fluid " src="{{ asset('assets/images/job-alert-image.jpeg') }}" alt="">
						</div>
					</div>
				</div>
			</div>
		</section>
		<section class="pa-min-les">
			<div class="container">
				<div
					class="row">
					<!-- -------------------------- -->
					<div class="col-lg-3"></div>
					<div
						class="col-lg-6">
						<!--end col-->
						{{ form_start(form) }}
						<div class="row">
							<div class="col-lg-12">
								<div class="mb-3">
									<label for="nameInput" class="form-label fs-13">Select multiple preferred job categories.</label>
									{{ form_widget(form.jobcategory) }}
								</div>
							</div>
