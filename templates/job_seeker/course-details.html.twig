{% extends 'base.html.twig' %}
{% block title %}
	Course Details
{% endblock %}
{% block body %}
	<style>
		.min-height-200 {
			min-height: 200px;
		}
	</style>
	<div class="min-height-200" data-controller="job-details">
		<section class="bg-home8" id="home">
			<div class="container">
				<nav class="d-inline-block" aria-label="breadcrumb ">
					<ol class="breadcrumb justify-content-center fs-12">
						<li class="">
