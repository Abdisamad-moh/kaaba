{% block ogs %}
	<meta property="og:title" content="{{ job.title }} at {{ job.employer.name }} - {{ job.formattedLocation }}" />
    <meta property="og:description" content="{{ job.jobDescription|striptags|replace({'&nbsp;': ' '})|slice(0, 160)|raw }}..." />
    <meta property="og:image" content="{{  absolute_url(asset('assets/images/metier-log-1.png')) }}" />
    {# <meta property="og:image" content="{{ job.employer.employerDetails.logo ? absolute_url(asset('uploads/' ~ job.employer.employerDetails.logo)) : absolute_url(asset('assets/images/metier-log-1.png')) }}" /> #}
    <meta property="og:url" content="{{ url('job_seeker_job_details', {slug: job.title|slugify, uuid: job.uuid }) }}" />
    <meta property="og:type" content="article" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ job.title }} at {{ job.employer.name }}">
    <meta name="twitter:description" content="{{ job.jobDescription|striptags|replace({'&nbsp;': ' '})|slice(0, 160)|raw }}...">
    <meta name="twitter:image" content="{{ absolute_url(asset('assets/images/metier-log-1.png')) }}">
    {# <meta name="twitter:image" content="{{ job.employer.employerDetails.logo ? absolute_url(asset('uploads/' ~ job.employer.employerDetails.logo)) : absolute_url(asset('assets/images/metier-log-1.png')) }}"> #}
    
    <!-- Canonical URL -->
    <link rel="canonical" href="{{ url('job_seeker_job_details', {slug: job.title|slugify, uuid: job.uuid }) }}" />
    
    <!-- Location Meta Tags -->
    {% if job.city and job.country %}
        <meta name="geo.region" content="{{ job.country.iso3 }}" />
        <meta name="geo.placename" content="{{ job.city.name }}" />
        {% if job.country.latitude and job.country.longitude %}
            <meta name="geo.position" content="{{ job.country.latitude }};{{ job.country.longitude }}" />
            <meta name="ICBM" content="{{ job.country.latitude }}, {{ job.country.longitude }}" />
        {% endif %}
    {% endif %}
    
    <!-- Structured Data (JSON-LD) -->
    <script type="application/ld+json">
    {
        "@context": "https://schema.org/",
        "@type": "JobPosting",
        "title": "{{ job.title }}",
        "description": "{{ job.jobDescription|striptags|replace({'&nbsp;': ' '})|raw }}",
        "datePosted": "{{ job.createdAt|date('Y-m-d') }}",
        "validThrough": "{{ job.applicationClosingDate|date('Y-m-d') }}",
        "employmentType": "{{ job.jobtypes|map(type => type.name)|join(', ') }}",
        "hiringOrganization": {
            "@type": "Organization",
            "name": "{{ job.employer.name }}",
            "sameAs": "{{ job.employer.employerDetails.website ?? '#' }}",
            "logo": "{{ job.employer.employerDetails.logo ? absolute_url(asset('uploads/' ~ job.employer.employerDetails.logo)) : absolute_url(asset('assets/images/metier-log-1.png')) }}"
        },
        "jobLocation": {
            "@type": "Place",
            "address": {
                "@type": "PostalAddress",
                "streetAddress": "{{ job.location }}",
                "addressLocality": "{{ job.city ?? '' }}",
                "addressRegion": "{{ job.state ?? '' }}",
                "postalCode": "",
                "addressCountry": "{{ job.country.name ?? '' }}"
            }
        },
        "baseSalary": {
            "@type": "MonetaryAmount",
            "currency": "{{ job.currency ? job.currency.code : 'USD' }}",
            "value": {
                "@type": "QuantitativeValue",
                "minValue": {{ job.minimumPay ?? 0 }},
                "maxValue": {{ job.maximumPay ?? 0 }},
                "unitText": "{{ job.mentionedAmountBy }}"
            }
        }
    }
    </script>
