						</li>
					</ol>
				</nav>
				<div class="candidate-list-box card mt-4 col-lg-12">
					<div class="card-body p-4">
						<div
							class="row align-items-center">
							<!--end col-->

							<div class="row text-lg-start">
								<div class="col-lg-6">
									<div class="  me-lg-12 text-dark">
										<div class="ps-3 pt-2">
											<h6 class="fs-20">
												{{ tender.employer.name|capitalizeWords }}</h6>
											<h6>{{ tender.title }}</h6>
