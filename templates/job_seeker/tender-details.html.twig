{% extends 'base.html.twig' %}
{% block title %}
	Tender Details
{% endblock %}
{% block ogs %}
	<meta property="og:title" content="{{ tender.title }}" />
    <meta property="og:description" content="{{ tender.description }}" />
    <meta property="og:image" content="{{ absolute_url(asset('assets/images/metier-log-1.png')) }}" />
    <meta property="og:url" content="{{ url('job_seeker_tender_details', {slug: tender.title|slugify, uuid: tender.uuid }) }}" />
{% endblock %}
