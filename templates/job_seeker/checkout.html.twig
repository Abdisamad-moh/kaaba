													<button type="button" class="text-black font-weight-bold btn bg-secondary-subtle text-secondary ">+252</button>
													<input type="text" placeholder="Phone Number" required data-zaad-target="phone" class="form-control form-control-lg" aria-label="Text input with segmented dropdown button">
												</div>
											</div>
											<div class="mb-3">
												<div class="form-check">
													<label for="termsInput" class="form-label  fs-13">Agree Terms</label>
